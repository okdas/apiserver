extends ../../layout

block section-head-title
    a(href='#/players') Управление игроками

block section-head-nav
    ul.nav.nav-row
        li.active: a Игроки
        li: a(href='#/players/group/list') Группы
        li: a(href='#/players/permission/list') Разрешения
        li: a(href='#/players/permission/sender/mail') Рассылка

block section-body
    table.table.players
        thead
            tr
                th #
                th.col-flex: .table-col: .table-col-sortable Игрок и его группы
                th: .table-col: .table-col-sortable Активность
                th: .table-col: .table-col-sortable Платежеспособность

        tbody
            tr(ng-repeat='player in players')
                td {{player.id}}
                td
                    a.player-name(href='', ng-click='showDetails(player)') {{player.name}}
                    span(ng-repeat='group in player.groups')
                        span {{group}}
                        span(ng-if='!$last'), 
                td
                td

    script(type='text/ng-template', id='player/dialog/')
        include player/dialog/index
