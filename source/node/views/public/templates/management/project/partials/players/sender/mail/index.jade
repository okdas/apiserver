extends ../../../layout

block section-head-title
    a(href='#/players') Управление игроками

block section-head-nav
    ul.nav.nav-row
        li: a(href='#/players/player/list') Игроки
        li: a(href='#/players/group/list') Группы
        li: a(href='#/players/permission/list') Разрешения
        li.active: a Рассылка

block section-body
    table.table.players
        thead
            tr
                th #
                th.col-flex: .table-col: .table-col-sortable Игрок
                th: .table-col: .table-col-sortable Почта

        tbody
            tr(ng-repeat='player in players', ng-click='togglePlayer(player)', ng-class='{"selected success":player.selected}')
                td {{player.id}}
                td {{player.name}}
                td {{player.email}}


block section-side
    form(name='MailForm')
        fieldset
            input.input(placeholder='Тема', type='text', required, ng-model='mail.subject')
            textarea.input(placeholder='Тело', type='text', required, ng-model='mail.text')

        fieldset
            button.btn.btn-primary.btn-block(type='submit', ng-click='send(MailForm)', ng-disabled='!MailForm.$valid')
                span Отправить


