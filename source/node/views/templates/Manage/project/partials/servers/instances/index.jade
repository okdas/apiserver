extends ../layout



block section-body
    table.table.players
        thead
            tr
                th
                th.col-flex: .sortable: .sortable-cell Хост:порт
                th
                    button.btn.btn-info(ng-click='reload()')
                        i.icon-refresh

        tbody
            tr(ng-repeat='instance in instances')
                td {{instance.id}}
                td
                    a(href='', ng-click='showDetails(instance)') {{instance.host}}:{{instance.port}}
                td
                    a(href='#/servers/instance/update/{{instance.id}}')
                        button.btn.btn-success
                            i.icon-wrench

    .row
        .col-12
            a(href='#/servers/instance/create')= 'Создать'
